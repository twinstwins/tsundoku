<% unless current_user?(@user) %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.following_relationships.find_by(following_id: @user.id),remote: true, html: { method: :delete }) do |f| %>
    <%= f.submit "Unfollow", class: "btn btn-large follow-btn" %>
    <% end %>
  <% else %>
    <%= form_for(current_user.following_relationships.build(following_id: @user.id),remote: true) do |f| %>
    <div><%= f.hidden_field :following_id %></div>
    <%= f.submit "Follow", class: "btn btn-large btn-primary follow-btn" %>
    <% end %>
  <% end %>
  </div>
<% end %>
